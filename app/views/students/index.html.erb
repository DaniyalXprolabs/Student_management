<%= notice %>
<h1>Listing Students</h1>
<h2><%= link_to "Go and Check Courses", courses_path %></h2>
<%= link_to "Add a new Student", new_student_path %>
<br>
<hr>
<table>
  <thead>
  <tr>
    <th>First_Name</th>
    <th>Last_Name</th>
    <th>Email</th>
    <th>Action</th>
  </tr>
  </thead>
  <tbody>
  <% @students.each do |s| %>
  <tr>
    <td><%= s.first_name %></td>
    <td><%= s.last_name %></td>
    <td><%= s.email %></td>
    <td><%= link_to "View Student", s %></td>
  </tr>

  <% end %>
  </tbody>
</table>