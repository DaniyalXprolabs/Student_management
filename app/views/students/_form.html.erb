<br>
<div class="container text-center" style="margin-bottom:40px;border: 3px solid black; border-radius: 10px; width: 300px; margin-top: 40px; padding-bottom: 30px; padding-top: 30px;">
<%= form_with model: @student do |form| %>
  <% if @student.errors.any? %>
    <% @student.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>
  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div><br>

  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div><br>
  <div>
    <%= form.label :gender %>
    <%= form.text_field :gender %>
  </div><br>
<div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div><br>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <br>
  <%= form.submit %>
<% end %>
</div>